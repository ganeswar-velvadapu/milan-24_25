<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Club</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body{
            background: linear-gradient(135deg, #fbc2eb, #a6c1ee);
            background-repeat: no-repeat; 
            background-attachment: fixed;
        }
        .list-group-item {
            background-color: #e0e4eb;
            transition: background-color 0.3s, color 0.3s;
        }
        .list-group-item:hover {
            background-color: #0d6efd; 
        }
        .list-group-item a {
            color: #000; 
            text-decoration: none;
        }
        .list-group-item a:hover {
            color: #d3dcda; 
        }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/navbar.ejs',{token:token}) %>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Select a Club</h1>
            
                <ul class="list-group">
                    <% clubs.forEach(club => { %>
                        <li class="list-group-item">
                            <a href="/api/sort/clubs/<%= club %>/students" class="text-decoration-none text-dark">
                                <%= club %>
                            </a>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"> 
    </script>
    <script>
        const listItems = document.querySelectorAll('.list-group-item');
        listItems.forEach(item => {
            item.addEventListener('click', () => {
                window.location.href = item.querySelector('a').href;
            });
        });
    </script>
</body>
</html>
