<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users Sorted by Degree</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .list-group-item {
            background-color: #e0e4eb;
            transition: background-color 0.3s, color 0.3s;
        }
        .list-group-item:hover {
            background-color: #0d6efd; /* Light gray background on hover */
        }
        .list-group-item a {
            color: #000; /* Default text color */
            text-decoration: none;
        }
        .list-group-item a:hover {
            color: #d3dcda; /* Blue color for link on hover */
        }
        
        .card{
          background-color: rgba(255, 255, 255,0.5);
      }   
      .custom-container {
        max-width: 900px; /* Set your desired max width */
        width: 100%; /* Make it responsive */
    }
    </style>
</head>
<body >
  <%- include('../partials/navbar.ejs',{token:token}) %>
  <!-- Main content container -->
  <div class="container custom-container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">

        <!-- Heading -->
        <h1 class="text-center mb-4">Select a Year for <%= branch %> in <%= degree %></h1>

        <!-- Styled list group inside a card -->
        <div class="card shadow-sm">
          <div class="card-body">
            <ul class="list-group">
              <% years.forEach(year => { %>
                <li class="list-group-item">
                  <a href="/api/sort/degree/<%= degree %>/branch/<%= branch %>/year/<%= year %>/students" class="text-decoration-none text-dark">
                    Year: <%= year %>
                  </a>
                </li>
              <% }) %>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
    const listItems = document.querySelectorAll('.list-group-item');
    console.log(listItems);
    listItems.forEach(item => {
        item.addEventListener('click', () => {
            window.location.href = item.querySelector('a').href;
        });
    });
</script>
</body>
</html>
