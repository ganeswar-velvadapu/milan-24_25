<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body{
        background: linear-gradient(135deg, #fbc2eb, #a6c1ee);
        background-repeat: no-repeat; 
        background-attachment: fixed;
    }
    </style>
</head>
<body class="d-flex flex-column justify-content-center vh-100 bg-light">
  <%- include('../partials/alert.ejs',{message:message}) %>
    <%- include('../partials/navbar.ejs'),{token:token} %>

  <div class=" m-auto container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <h2 class="card-title text-center mb-4">Sign Up</h2>
            <form action="/api/auth/verify-otp/save" method="POST">
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password">
              </div>
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username">
              </div>
              <div class="mb-3">
                <label for="hostel" class="form-label">Hostel</label>
                <select class="form-select" id="hostel" name="hostel">
                  <option value="" disabled>Select your hostel</option>
                  <% hostels.forEach(function(hostel) { %>
                    <option value="<%= hostel %>"><%= hostel %></option>
                  <% }) %>
                </select>
              </div>              
              <div class="mb-3">
                <label for="year" class="form-label">Year</label>
                <select class="form-select" id="year" name="year">
                  <option value="" disabled>Select Batch</option>
                  <% year.forEach(function(year) { %>
                    <option value="<%= year %>"><%= year %></option>
                  <% }) %>
                </select>
              </div>   
              <div class="mb-3">
                <label for="degree" class="form-label">Degree</label>
                <select class="form-select" name="degree">
                  <option value="B.Tech">B.Tech</option>
                  <option value="M.Tech">M.Tech</option>
                  <option value="PhD">PhD</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="department" class="form-label">Department</label>
                <select class="form-select" id="department" name="branch">
                  <option value="" disabled>Select your Department</option>
                  <% branches.forEach(function(branch) { %>
                    <option value="<%= branch %>"><%= branch %></option>
                  <% }) %>
                </select>
              </div>    
              <div class="mb-3">
                <label for="company" class="form-label">Company you placed In(Optional)</label>
                <select class="form-select" id="company" name="company">
                  <option value="" >Select Company</option>
                  <% companies.forEach(function(company) { %>
                    <option value="<%= company %>"><%= company %></option>
                  <% }) %>
                </select>
              </div>
              <div class="mb-3">
                <label for="club" class="form-label">Select club(s) you are part of</label>
                <select class="form-select" id="club-select">
                  <option value=""selected>Select Club</option>
                  <% clubs.forEach(function(club) { %>
                    <option value="<%= club %>"><%= club %></option>
                  <% }) %>
                </select>
                <button type="button" id="add-club" class="btn btn-primary mt-2">Add Club</button>
              </div>
              <div class="selected-clubs" id="selected-clubs">
              </div>
              <input type="hidden" name="clubs" id="clubs-input">
              <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
      const clubSelect = document.getElementById('club-select');
      const addClubBtn = document.getElementById('add-club');
      const selectedClubsContainer = document.getElementById('selected-clubs');
      const clubsInput = document.getElementById('clubs-input');
    
      let selectedClubs = [];
    
      addClubBtn.addEventListener('click', function () {
        const selectedClub = clubSelect.value;
    
        if (selectedClub && !selectedClubs.includes(selectedClub)) {

          selectedClubs.push(selectedClub);
    
          const clubDiv = document.createElement('div');
          clubDiv.className = 'selected-club';
          clubDiv.innerHTML = `${selectedClub} <span class="remove-club" data-club="${selectedClub}">&times;</span>`;
          selectedClubsContainer.appendChild(clubDiv);
          clubsInput.value = JSON.stringify(selectedClubs);
        }
      });
    
      selectedClubsContainer.addEventListener('click', function (e) {
        if (e.target.classList.contains('remove-club')) {
          const clubToRemove = e.target.getAttribute('data-club');

          selectedClubs = selectedClubs.filter(club => club !== clubToRemove);
    
          e.target.parentElement.remove();
  
          clubsInput.value = JSON.stringify(selectedClubs);
        }
      });
    
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
